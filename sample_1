import re
import nltk
from nltk.corpus import words

# Uncomment this if you haven't already downloaded the 'words' corpus
# nltk.download('words')

# Define the words corpus set
words_1st = set(words.words())

def split_into_words(text):
    result = []
    n = len(text)
    i = 0

    while i < n:
        current_word = ""
        # Start adding characters one by one and check if the current combination is a valid word
        for j in range(i, n):
            current_word += text[j]
            # Check if the current combination is a valid word in the corpus
            if current_word.lower() in words_1st:
                result.append(current_word.capitalize())  # Add the valid word (capitalized)
                i = j + 1  # Move index forward to the next character after the found word
                break
        else:
            # If no valid word is found, append the current character as a whole word
            result.append(text[i].upper())  # Capitalize the current character
            i += 1  # Move to the next character

    # Final result formatted as a string
    return ' '.join(result)

# Test cases
print(split_into_words('SIGNATURESOURCECODE1'))  # Expected: SIGNATURE SOURCE CODE 1
print(split_into_words('O2saturatedquantity'))    # Expected: O2 Saturated Quantity
print(split_into_words('H2OisEssential'))        # Expected: H2O Is Essential
print(split_into_words('CamelCaseExample1'))     # Expected: Camel Case Example 1
print(split_into_words('H2OWaterIsGreat'))       # Expected: H2O Water Is Great
